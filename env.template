# LinkedIn Job Automation System - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# LinkedIn Credentials (REQUIRED)
# Your LinkedIn email address
LINKEDIN_USERNAME=your_email@example.com

# Your LinkedIn password
LINKEDIN_PASSWORD=your_linkedin_password

# AI Configuration (REQUIRED for AI-powered job qualification)
# Google Gemini API key for AI-powered job qualification analysis
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets Configuration (REQUIRED)
# Path to your Google Sheets service account JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=auto-apply-bot-466218-5a1d69f23d44.json

# Your Google Sheets spreadsheet ID (from the URL)
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Scraping Configuration (OPTIONAL - defaults shown)
# Maximum number of jobs to extract per session
MAX_JOBS_PER_SESSION=10

# Minimum delay between actions (seconds)
DELAY_MIN=3.0

# Maximum delay between actions (seconds)
DELAY_MAX=6.0

# Element wait timeout (seconds)
ELEMENT_WAIT_TIMEOUT=20

# Logging Configuration (OPTIONAL)
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Applicant Profile Configuration (REQUIRED for Auto-Apply)
# Personal Information
APPLICANT_FIRST_NAME=YourFirstName
APPLICANT_LAST_NAME=YourLastName
APPLICANT_EMAIL=your_email@example.com
APPLICANT_PHONE=+1234567890
APPLICANT_LOCATION=Your City, State

# Resume and Cover Letter
APPLICANT_RESUME_PATH=/path/to/your/resume.pdf
APPLICANT_COVER_LETTER_PATH=/path/to/your/cover_letter.pdf
APPLICANT_COVER_LETTER_TEXT=Your default cover letter text here

# Application Preferences
AUTO_APPLY_ENABLED=true
MAX_APPLICATIONS_PER_SESSION=5
SKIP_COMPLEX_APPLICATIONS=true
REQUIRE_MANUAL_REVIEW=false

# Experience and Skills
APPLICANT_YEARS_EXPERIENCE=3
APPLICANT_SKILLS=Python, JavaScript, React, Node.js, AWS
APPLICANT_EDUCATION=Bachelor's in Computer Science

# Default Answers for Common Questions
ANSWER_WILLING_TO_RELOCATE=Yes
ANSWER_WORK_AUTHORIZATION=Yes
ANSWER_REMOTE_WORK=Yes
ANSWER_SALARY_EXPECTATIONS=Negotiable
ANSWER_START_DATE=Immediately
ANSWER_NOTICE_PERIOD=2 weeks 